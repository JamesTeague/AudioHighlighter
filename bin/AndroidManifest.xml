<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.drake.QuoteBite"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/quotebite_08"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.drake.QuoteBite.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.drake.QuoteBite.Playback"
            android:label="@string/title_activity_playback"
            android:screenOrientation="portrait" 
            android:clearTaskOnLaunch="true">
        </activity>
        <activity
            android:name="edu.drake.QuoteBite.Files_list"
            android:label="@string/title_activity_files_list" 
            android:screenOrientation="portrait"
            android:clearTaskOnLaunch="true">
        </activity>
    </application>

</manifest>